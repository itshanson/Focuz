{
    "manifest_version": 3,
    "name": "Focuz",
    "version": "1.0",
    "description": "Tracks time spent on each tab and tab-switching frequency.",
    "permissions": ["tabs", "idle", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icons": {
       "16": "icon16.png",
       "48": "icon48.png",
       "128": "icon128.png"
      }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
  }
